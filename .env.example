# ──────────────────────────────────────────────
# Roognis Walking Skeleton — Environment Config
# ──────────────────────────────────────────────

# App
APP_NAME=roognis
APP_ENV=development
LOG_LEVEL=debug
SERVER_PORT=8080

# Auth (generate with: openssl rand -hex 32)
JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_hex_32
JWT_EXPIRY_MINUTES=30

# Database
DATABASE_URL=postgres://roognis:roognis_secret@localhost:5432/roognis?sslmode=disable

# Redis
REDIS_URL=redis://:roognis_redis_secret@localhost:6379/0
CACHE_TTL_SECONDS=3600

# LLM (OpenAI-compatible endpoint)
LLM_MODEL=gpt-4o-mini
LLM_API_KEY=sk-YOUR_KEY_HERE
LLM_API_BASE=https://api.openai.com/v1
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048
LLM_TIMEOUT_SECONDS=60

# Rate Limiting
RATE_LIMIT_RPM=60

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
